<div class="tracked-categories">
  {{mount-widget widget="home-logo" args=args id="sidebar-logo"}}

  <div class="custom-tracking-nav">
    <div class="custom-nav-list custom-global-list">
      <h3><a class="all-link" href="/latest">{{theme-i18n "sidebar_title.all_topics"}}</a></h3>
      {{navigation-bar navItems=navItems filterMode=filterMode category=category id="global-sidebar-nav"}}
    </div>

    {{#if currentUser}}
      <div class="custom-nav-list custom-category-list">
        <h3><a class="all-link" href="/categories">{{theme-i18n "sidebar_title.categories"}}</a> <a href="/my/preferences/categories">{{d-icon "pencil"}}</a> </h3>

        {{#if trackedCats}}
          <ul>
            {{#each trackedCats as |c|}}
              <li class={{if c.[1] 'active'}} data-category-name="{{c.[0].slug}}">
                  <a href="/c/{{if c.[0].parentCategory c.[0].parentCategory.slug}}{{if c.[0].parentCategory '/'}}{{c.[0].slug}}{{if c.[0].unreadTopics (if c.[0].newTopics '/l/new' '/l/unread') }}">
                    {{category-link c.[0]}}
                    {{#if c.[0].newTopics}}
                      <span class='badge new-posts badge-notification' title='{{i18n 'topic.new_topics' count=c.[0].newTopics}}'>{{i18n 'filters.new.lower_title_with_count' count=c.[0].newTopics}}</span>
                    {{else if c.[0].unreadTopics}}
                        <span class='badge unread-posts badge-notification' title='{{i18n 'topic.unread_topics' count=c.[0].unreadTopics}}'>{{i18n 'filters.unread.lower_title_with_count' count=c.[0].unreadTopics}}</span>
                    {{/if}}
                  </a>
              </li>
            {{/each}}
          </ul>
        {{/if}}

        {{#unless trackedCats}}
          <div class="custom-empty-message">
            <p>{{{theme-i18n "no_categories"}}}</p>
          </div>
        {{/unless}}

      </div>

      {{#if trackedTags}}
        <div class="custom-nav-list custom-tag-list">
          <h3><a class="all-link" href="/tags">{{theme-i18n "sidebar_title.tags"}}</a> <a href="/my/preferences/tags">{{d-icon "pencil"}}</a> </h3>
          <ul>
            {{#each trackedTags as |t|}}
                <li class={{if t.[1] 'active'}} data-tag-name={{t.[0]}}><a href="/tags/{{t.[0]}}">{{t.[0]}}</a></li>
            {{/each}}
          </ul>
        </div>
      {{/if}}
    {{/if}}

    <!--
    {{#if assignedTopics}}
    <div class="custom-nav-list custom-assign-list">
      <h3><a class="all-link" href="my/activity/assigned">Assigned</a> </h3>
      <ul>
        {{#each assignedTopics as |asgn|}}
        <li><a href="/t/{{asgn.slug}}/{{asgn.id}}/{{asgn.last_read_post_number}}">{{asgn.title}}</a></li>
    {{/each}}
    </ul>

    </div>

    {{/if}}
  -->
  </div>
</div>
