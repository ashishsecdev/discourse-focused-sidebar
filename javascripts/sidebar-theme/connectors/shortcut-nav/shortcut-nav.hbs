<div class="tracked-categories">
  {{mount-widget widget="home-logo" args=args id="sidebar-logo"}}

  <div class="custom-tracking-nav">
    <div class="custom-nav-list custom-global-list">
      <h3><a class="all-link" href="/latest">All topics</a></h3>
      {{navigation-bar navItems=navItems filterMode=filterMode category=category id="global-sidebar-nav"}}
    </div>

    {{#if currentUser}}
      <div class="custom-nav-list custom-category-list">
        <h3><a class="all-link" href="/categories">Categories</a> <a href="/my/preferences/categories">{{d-icon "pencil"}}</a> </h3>

        {{#if trackedCats}}
          <ul>
            {{#each trackedCats as |c|}}
              <li class={{c.slug}}>
                {{#if c.parentCategory}}
                  {{#if c.newTopics}}
                    <a href="/c/{{c.parentCategory.slug}}/{{c.slug}}/l/new">{{category-link c}}
                      <span class='badge new-posts badge-notification' title='{{i18n 'topic.new_topics' count=c.newTopics}}'>{{i18n 'filters.new.lower_title_with_count' count=c.newTopics}}</span>
                    </a>
                  {{else if c.unreadTopics}}
                    <a href="/c/{{c.parentCategory.slug}}/{{c.slug}}/l/unread">{{category-link c}}
                      <span class='badge unread-posts badge-notification' title='{{i18n 'topic.unread_topics' count=c.unreadTopics}}'>{{i18n 'filters.unread.lower_title_with_count' count=c.unreadTopics}}</span>
                    </a>
                  {{else }}
                    <a href="/c/{{c.parentCategory.slug}}/{{c.slug}}">{{category-link c}}</a>
                  {{/if}}
                {{else}}
                  {{#if c.newTopics}}
                    <a href="/c/{{c.slug}}/l/new">{{category-link c}}
                      <span class='badge new-posts badge-notification' title='{{i18n 'topic.new_topics' count=c.newTopics}}'>{{i18n 'filters.new.lower_title_with_count' count=c.newTopics}}</span>
                    </a>
                  {{else if c.unreadTopics}}
                    <a href="/c/{{c.slug}}/l/unread">{{category-link c}}
                      <span class='badge unread-posts badge-notification' title='{{i18n 'topic.unread_topics' count=c.unreadTopics}}'>{{i18n 'filters.unread.lower_title_with_count' count=c.unreadTopics}}</span>
                    </a>
                  {{else }}
                    <a href="/c/{{c.slug}}">{{category-link c}}</a>
                  {{/if}}
                {{/if}}


              </li>
            {{/each}}
          </ul>
        {{/if}}

        {{#unless trackedCats}}
          <div class="custom-empty-message">
            <p><a href="/my/preferences/categories">Start tracking or watching categories</a> and they'll be listed here.</p>
          </div>
        {{/unless}}

      </div>

      {{#if trackedTags}}
        <div class="custom-nav-list custom-tag-list">
          <h3><a class="all-link" href="/tags">Tags</a> <a href="/my/preferences/tags">{{d-icon "pencil"}}</a> </h3>
          <ul>
            {{#each trackedTags as |t|}}
              <li class={{t}}><a href="/tags/{{t}}">{{t}}</a></li>
            {{/each}}
          </ul>
        </div>
      {{/if}}
    {{/if}}

